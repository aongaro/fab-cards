{
  "name": "fab-cards",
  "description": "CSV, JSON, and JavaScript/TypeScript representations of Flesh and Blood cards",
  "version": "1.0.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate": "ts-node src/generateCardData.ts",
    "prebuild": "rm -rf dist",
    "build": "esbuild ./data/index.ts --outdir=dist --bundle --minify --platform=node",
    "postbuild": "cp data/cards.json dist/cards.json && cp src/cards.csv dist/cards.csv && tsc --declaration",
    "test": "ts-node test/index.ts",
    "full": "npm run generate && npm run build && npm test"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "@types/papaparse": "^5.3.2",
    "esbuild": "^0.14.38",
    "papaparse": "^5.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manwaring/fab-cards.git"
  },
  "bugs": {
    "url": "https://github.com/manwaring/fab-cards/issues"
  },
  "homepage": "https://github.com/manwaring/fab-cards#readme",
  "author": "Phillip Manwaring",
  "license": "MIT",
  "keywords": [
    "Flesh and Blood",
    "FAB",
    "FABTCG"
  ]
}
