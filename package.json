{
  "name": "fab-cards",
  "description": "CSV, JSON, and JavaScript/TypeScript representation of Flesh and Blood cards",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate": "ts-node import/generateCardData.ts",
    "prebuild": "rm -rf dist",
    "build": "esbuild ./src/index.ts --outdir=dist --bundle --minify",
    "postbuild": "tsc --declaration"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "@types/papaparse": "^5.3.2",
    "esbuild": "^0.14.38",
    "papaparse": "^5.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manwaring/fab-cards.git"
  },
  "bugs": {
    "url": "https://github.com/manwaring/fab-cards/issues"
  },
  "homepage": "https://github.com/manwaring/fab-cards#readme",
  "author": "Phillip Manwaring",
  "license": "MIT",
  "keywords": [
    "Flesh and Blood",
    "FAB",
    "FABTCG"
  ]
}
